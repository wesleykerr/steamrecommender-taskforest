
cd /usr/local/game-recommender
echo `pwd`

if [ -f /tmp/taskforest.gamestats.lock ]
then
  echo player is locked and we will exit now
  exit 1
fi

touch /tmp/taskforest.gamestats.lock

java -cp "recommender.jar" com.wesleykerr.steam.etl.PushPlaytime 

echo "Hitting the endpoint that updates the images"
curl http://www.steamrecommender.com/update/images

rm /tmp/taskforest.gamestats.lock
